<%# Это фрагмет (паршал, partial) для вывода вопроса.В нем определена %>
<%# локальная переменная question, в которую при вызове будет передан как в %>
<%# метод ruby объект после ключа (object: @question) %>
  <div class="question"> <div class="question-content">
    <div class="question-text text-lead">
      <div class="lead my-3">
        <%= question.user.name_or_email %>
      </div>
      <div class="col-sm-auto text-sm-center align-self-center">
        <%= question.user.gravatar %>
      </div>
      <div class="lead my-3">
        <%= sanitize question.text %>
      </div>
    </div>

    <% if question.answer.present? %>
      <div class="question-answer text-lead">
        <%= question.answer %>
      </div>
    <% end %>

    <div class="question-date">
      <time datetime="<%= question.formatted_created_at %>">
        <%= question.formatted_created_at %>
      </time>
    </div>
  </div>
</div>
